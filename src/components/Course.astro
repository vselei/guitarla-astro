---
export interface Props {
  title: string;
  content: string;
  image: string;
}

const { content, image, title } = Astro.props;

const bgImage = `url(${image})`;
---

<style define:vars={{ bgImage }}>
  .course {
    background-image: linear-gradient(
        to right,
        rgb(0 0 0 / 0.65),
        rgb(0 0 0 / 0.85)
      ),
      var(--bgImage);
  }
</style>

<section class="course">
  <div class="container grid">
    <div class="content">
      <h2 class="heading">{title}</h2>
      <p>{content}</p>
    </div>
  </div>
</section>

<style>
  .course {
    padding: 10rem 0;
    margin-top: 10rem;
    background-size: cover;
    background-position: center center;
  }
  @media (min-width: 768px) {
    .grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
    }
    .content {
      grid-column: 3 / 3;
      width: 50vw;
    }
  }
  .course p {
    text-align: center;
    font-size: 2.4rem;
    color: var(--white);
  }
</style>
